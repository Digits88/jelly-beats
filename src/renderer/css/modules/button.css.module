.button {
  margin: 16px 0;
  padding: 12px 24px;
  border: 0;
  border-radius: 24px;
  background-color: #3498db;
  color: #fff;
  font-weight: bold;
  font-size: 0.9em;
  text-transform: uppercase;
  cursor: pointer;
}

.button .icon {
  margin-left: 0;
  margin-right: 8px;
}

.busy {
  composes: button;
  background-color: rgba(255, 255, 255, 0.5);
  color: rgba(23, 25, 31, 0.99);
}
