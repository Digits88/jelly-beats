.player {
  bottom: 0;
  left: 0;
  right: 0;
  position: fixed;
  margin: auto;
  z-index: 99;
  display: inline-block;
  background: #2c2e34;
  transform: translateY(100%);
  transition: transform 300ms ease;
  will-change: transform;
}

.player.active {
  transform: translateY(0%);
}

.player .container {
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  margin: 0;
}

.player .controls {
  flex: 2.5 0 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.player .actions {
  /* flex: 0 0 25%; */
  margin: 0 16px;
}

.player .seek {
  flex-grow: 1;
  margin: 0 8px;
}

.player audio {
  display: none;
}

/* Button */

.button {
  border: 0;
  background: transparent;
  display: inline-block;
  color: inherit;
  font-size: 1em;
  padding: 2px;
  margin: 0 4px;
  border-radius: 4px;
  transition: background 0.3s ease;
}

.button svg {
  display: inline-block;
  vertical-align: middle;
  margin: auto;
}

.button:hover:not(:disabled) {
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.15);
}

.button:active {
  opacity: 1;
}

.button:disabled {
  opacity: 0.4;
}

/* Metadata */

.card {
  display: flex;
  align-items: center;
  align-content: center;
  padding: 8px;
  flex: 1 0 0;
  background: #42444b;
}

.trackInfo {
  display: inline-block;
  margin-left: 16px;
  margin-right: 8px;
  font-size: 0.8em;
  flex-shrink: 1;
  display: flex;
  min-width: 0;
  flex-direction: column;
}

.trackInfo p {
  margin: 0 0 4px 0;
  line-height: 1.2;
  overflow: hidden;
  font-weight: bolder;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.trackInfo .author {
  flex-grow: 0;
  opacity: 0.6;
}

.thumbnail {
  flex-shrink: 0;
  height: 50px;
  width: 50px;
  margin: 0;
  border-radius: 0;
  background-color: #282c37;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}
